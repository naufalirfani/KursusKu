<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAbuMuda"
    android:orientation="vertical"
    tools:context=".AkunActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_akun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp">
        <Button
            android:id="@+id/btn_akun_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_arrow_back_white_24dp"
            app:layout_constraintTop_toTopOf="@id/cons_akun"
            app:layout_constraintLeft_toLeftOf="@id/cons_akun"/>
        <Button
            android:id="@+id/btn_akun_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_settings_white_24dp"
            app:layout_constraintTop_toTopOf="@id/cons_akun"
            app:layout_constraintRight_toLeftOf="@id/cons_akun_keranjang"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_akun_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintTop_toTopOf="@id/cons_akun"
            app:layout_constraintRight_toLeftOf="@id/btn_akun_chat">
            <ImageView
                android:id="@+id/btn_akun_keranjang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/ic_shopping_cart_white_24dp"
                app:layout_constraintRight_toRightOf="@id/cons_akun_keranjang"
                app:layout_constraintTop_toTopOf="@id/cons_akun_keranjang"
                app:layout_constraintLeft_toLeftOf="@id/cons_akun_keranjang"/>
            <TextView
                android:id="@+id/tv_akun_jumlahkeranjang"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:text="1"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:maxLines="1"
                android:background="@drawable/bg_circle_red"
                app:layout_constraintTop_toTopOf="@id/cons_akun_keranjang"
                app:layout_constraintRight_toRightOf="@id/cons_akun_keranjang"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/btn_akun_chat"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_chat_black_24dp"
            app:layout_constraintTop_toTopOf="@id/cons_akun"
            app:layout_constraintRight_toRightOf="@id/cons_akun"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_akun_foto"
            android:layout_width="50dp"
            android:scaleType="centerCrop"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            tools:src="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/btn_akun_back"
            app:layout_constraintBottom_toBottomOf="@id/cons_akun"
            app:layout_constraintLeft_toLeftOf="@id/cons_akun" />

        <TextView
            android:id="@+id/tv_akun_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="@string/user_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@id/iv_akun_foto"
            app:layout_constraintTop_toBottomOf="@id/btn_akun_back" />

        <TextView
            android:id="@+id/tv_akun_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailEt"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@id/iv_akun_foto"
            app:layout_constraintTop_toBottomOf="@id/tv_akun_username" />
        <ImageView
            android:id="@+id/akun_progressbar"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/bouncy_balls"
            app:layout_constraintBottom_toBottomOf="@+id/cons_akun"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_saldo_kursusku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/saldo_di_kursusku"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cons_akun"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:id="@+id/v_akun_bg"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_saldo_kursusku"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_saldo_kursusku">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="16dp"
            android:gravity="center|left">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/saldo"/>

            <TextView
                android:id="@+id/tv_akun_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/saldo"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="24sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_akun_isisaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/isi_saldo"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:textColor="@color/colorAbuGelap"
        android:drawableLeft="@drawable/button_topup"
        android:drawablePadding="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toBottomOf="@id/v_akun_bg"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btn_akun_setting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pengaturan_akun"
        android:textSize="14sp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:textColor="@color/colorAbuGelap"
        android:drawableLeft="@drawable/button_setting"
        android:drawablePadding="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_akun_isisaldo"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btn_akun_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/riwayat_transaksi"
        android:textSize="14sp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:textColor="@color/colorAbuGelap"
        android:drawableLeft="@drawable/button_history"
        android:drawablePadding="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_akun_setting2"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btn_akun_keluar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/keluar"
        android:textSize="14sp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:textColor="@color/colorAbuGelap"
        android:drawableLeft="@drawable/button_keluar"
        android:drawablePadding="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_akun_history"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/akun_progressbar_utama"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/bouncy_balls"
        android:translationZ="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>