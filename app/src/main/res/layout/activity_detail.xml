<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:elevation="8dp">
        <Button
            android:id="@+id/btn_akun"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/nama_kursus"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/search"/>
        <Button
            android:id="@+id/btn_keranjang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/keranjang"/>
        <Button
            android:id="@+id/btn_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/chat"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_detail"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">
        <TextView
            android:id="@+id/tv_detail_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="16sp"
            android:text="@string/nama_kursus"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_detail_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:maxLines="2"
                android:textSize="20sp"
                android:text="@string/harga"/>
            <TextView
                android:id="@+id/tv_detail_hargaasli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAbuabu"
                android:maxLines="2"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:text="@string/harga_asli"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center|left">
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/detail_ratingbar"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:clickable="false"
                app:srb_fillColor="#FFC107"
                app:srb_borderColor="#FFC107"
                app:srb_pressedFillColor="#FFC107"
                app:srb_pressedBorderColor="#FFC107"
                app:srb_stepSize="0.1"
                app:srb_gravity="left"
                app:srb_starBorderWidth="3"
                app:srb_isIndicator="true" />
            <TextView
                android:id="@+id/tv_detail_rating"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="#FFC107"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                tools:text="Rating" />
            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@color/colorAbuabu"/>
            <TextView
                android:id="@+id/tv_detail_terjual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/pembeli"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:text="@string/keranjang"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:background="@drawable/button_keranjang"
                android:drawableLeft="@drawable/addcart"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:text="Beli Sekarang"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/button_round" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>