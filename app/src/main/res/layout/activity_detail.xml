<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailActivity"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:id="@+id/linear1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:paddingTop="8dp"
           android:paddingBottom="8dp"
           android:background="@color/white"
           android:elevation="8dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent">
           <Button
               android:id="@+id/btn_detail_back"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_marginLeft="4dp"
               android:layout_marginTop="4dp"
               android:layout_marginRight="4dp"
               android:layout_marginBottom="4dp"
               android:background="@drawable/ic_arrow_back_black_24dp"/>
           <TextView
               android:id="@+id/tv_nama"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="@string/nama_kursus"
               android:textSize="16sp"
               android:textColor="@color/black"
               android:maxLines="1"
               android:layout_margin="4dp"/>
           <Button
               android:id="@+id/btn_detail_search"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_margin="4dp"
               android:background="@drawable/search"/>
           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cons_detail_keranjang"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:layout_marginBottom="4dp">
               <ImageView
                   android:id="@+id/btn_detail_keranjang"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:background="@drawable/keranjang"
                   android:layout_marginTop="4dp"
                   android:layout_marginRight="4dp"
                   android:elevation="0dp"
                   app:layout_constraintRight_toRightOf="@id/cons_detail_keranjang"
                   app:layout_constraintTop_toTopOf="@id/cons_detail_keranjang"
                   app:layout_constraintLeft_toLeftOf="@id/cons_detail_keranjang"/>
               <TextView
                   android:id="@+id/tv_detail_jumlahkeranjang"
                   android:layout_width="17dp"
                   android:layout_height="17dp"
                   android:text="1"
                   android:textSize="10sp"
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:maxLines="1"
                   android:background="@drawable/bg_circle_red"
                   app:layout_constraintTop_toTopOf="@id/cons_detail_keranjang"
                   app:layout_constraintRight_toRightOf="@id/cons_detail_keranjang"/>
           </androidx.constraintlayout.widget.ConstraintLayout>
           <Button
               android:id="@+id/btn_detail_chat"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_margin="4dp"
               android:background="@drawable/chat"/>
       </LinearLayout>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rv_detail"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:layout_below="@id/linear1"
           app:layout_constraintTop_toBottomOf="@id/linear1"
           app:layout_constraintLeft_toLeftOf="parent" />
       <LinearLayout
           android:id="@+id/linear_detail_button"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:background="@color/white"
           android:orientation="horizontal"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent">
           <Button
               android:id="@+id/btn_detail_addtokeranjang"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginTop="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginBottom="16dp"
               android:layout_marginRight="8dp"
               android:layout_height="wrap_content"
               android:text="@string/keranjang"
               android:textAllCaps="false"
               android:textColor="@color/colorPrimary"
               android:textSize="14sp"
               android:background="@drawable/button_keranjang"
               android:drawableLeft="@drawable/addcart"
               android:paddingLeft="16dp"
               android:paddingRight="16dp"/>
           <Button
               android:id="@+id/btn_detail_bayar"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:layout_marginLeft="8dp"
               android:layout_marginBottom="16dp"
               android:layout_marginRight="16dp"
               android:text="Beli Sekarang"
               android:textAllCaps="false"
               android:textSize="14sp"
               android:textColor="@color/white"
               android:background="@drawable/button_round" />
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/datail_progressBar"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/bouncy_balls"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_addtochart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_dialog_addtochart"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_dialog_addtochart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_assignment_turned_in_white_24dp"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/tv_dialog_addtochart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/dimasukkan_ke_keranjang"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>