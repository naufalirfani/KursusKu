<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHijauTua"
    tools:context=".InvoiceActivity">
    <ImageView
        android:id="@+id/iv_invoice_checked"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/checked"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_invoice_selamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="center"
        android:text="@string/mandiri_virtual_account"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/iv_invoice_checked"/>
    <TextView
        android:id="@+id/tv_invoice_selesaikan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/mandiri_virtual_account"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_invoice_selamat"/>
    <TextView
        android:id="@+id/tv_invoice_waktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/mandiri_virtual_account"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_invoice_selesaikan"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_invoice_bayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_invoice_waktu">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_invoice_bayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_invoice_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/nomor_hp_wa"
                android:textColor="@color/colorAbuGelap"
                android:textSize="10sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="@id/cons_invoice_bayar"
                app:layout_constraintTop_toTopOf="@id/cons_invoice_bayar"/>
            <TextView
                android:id="@+id/tv_invoice_hpwa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/mandiri_virtual_account"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="@id/cons_invoice_bayar"
                app:layout_constraintTop_toBottomOf="@id/tv_invoice_hp"/>
            <View
                android:id="@+id/v_invoice_pemisah2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAbuabu"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_invoice_hpwa"/>
            <ImageView
                android:id="@+id/iv_invoice_bayar"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/v_invoice_pemisah2"
                app:layout_constraintLeft_toLeftOf="@id/cons_invoice_bayar"
                app:layout_constraintRight_toRightOf="@id/cons_invoice_bayar"/>
            <TextView
                android:id="@+id/tv_invoice_bayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/mandiri_virtual_account"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/iv_invoice_bayar"/>
            <View
                android:id="@+id/v_invoice_pemisah"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAbuabu"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_invoice_bayar"/>
            <TextView
                android:id="@+id/tv_invoice_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/mandiri_virtual_account"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintLeft_toLeftOf="@id/cons_invoice_bayar"
                app:layout_constraintTop_toBottomOf="@id/v_invoice_pemisah"/>
            <TextView
                android:id="@+id/tv_invoice_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/mandiri_virtual_account"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintRight_toRightOf="@id/cons_invoice_bayar"
                app:layout_constraintTop_toBottomOf="@id/v_invoice_pemisah"/>
            <ImageView
                android:id="@+id/invoice_progressbar"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/bouncy_balls"
                app:layout_constraintTop_toBottomOf="@+id/v_invoice_pemisah2"
                app:layout_constraintBottom_toTopOf="@+id/v_invoice_pemisah"
                app:layout_constraintLeft_toLeftOf="@id/cons_invoice_bayar"
                app:layout_constraintRight_toRightOf="@id/cons_invoice_bayar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_invoice_panduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/lihat_panduan_pembayaran"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_invoice_bayar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_panduanbayar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_panduanbayar_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="@id/cons_panduanbayar"
            app:layout_constraintRight_toRightOf="@id/cons_panduanbayar"/>
        <TextView
            android:id="@+id/tv_panduanbayar_metode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/mandiri_virtual_account"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="@id/cons_panduanbayar"
            app:layout_constraintTop_toBottomOf="@id/iv_panduanbayar_close"/>
        <ImageView
            android:id="@+id/iv_panduanbayar_down1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            app:layout_constraintRight_toRightOf="@id/cons_panduanbayar"
            app:layout_constraintTop_toBottomOf="@id/iv_panduanbayar_close"/>
        <View
            android:id="@+id/v_panduanbayar_pemisah"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorAbuabu"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_panduanbayar_metode1"/>
        <TextView
            android:id="@+id/tv_panduanbayar_carabayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bri_virtual_account"
            android:textSize="12sp"
            android:textColor="@color/colorAbuGelap"
            android:padding="16dp"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/v_panduanbayar_pemisah"/>
        <TextView
            android:id="@+id/tv_panduanbayar_metode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/mandiri_virtual_account"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@id/cons_panduanbayar"
            app:layout_constraintTop_toBottomOf="@id/tv_panduanbayar_carabayar"/>
        <ImageView
            android:id="@+id/iv_panduanbayar_down2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            app:layout_constraintRight_toRightOf="@id/cons_panduanbayar"
            app:layout_constraintTop_toBottomOf="@id/tv_panduanbayar_carabayar"/>
        <View
            android:id="@+id/v_panduanbayar_pemisah2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorAbuabu"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_panduanbayar_metode2"/>
        <TextView
            android:id="@+id/tv_panduanbayar_carabayar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bri_virtual_account"
            android:textSize="12sp"
            android:textColor="@color/colorAbuGelap"
            android:padding="16dp"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/v_panduanbayar_pemisah2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>