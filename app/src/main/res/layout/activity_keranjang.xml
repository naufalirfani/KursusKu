<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".KeranjangActivity">
    <include
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_keranjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAbuMuda"
        app:layout_constraintTop_toBottomOf="@id/actionbar"/>
    <ImageView
        android:id="@+id/iv_keranjang_kosong"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/emptycartungu"
        app:layout_constraintTop_toBottomOf="@id/actionbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_keranjang_kosong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wah, keranjangmu masih kosong"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_keranjang_kosong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_keranjang_kosong2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yuk, telusuri kursus keinginanmu!"
        android:textSize="12sp"
        android:textColor="@color/colorAbuGelap"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/tv_keranjang_kosong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ProgressBar
        android:id="@+id/keranajng_progressbar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>