<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAbuMuda"
    android:id="@+id/keranjang_cons_utama"
    tools:context=".KeranjangActivity">
    <include
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="56dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_keranjang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorAbuMuda"
            app:layout_constraintTop_toBottomOf="@id/actionbar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:id="@+id/tv_total_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_harga"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/cons_checkout"
                app:layout_constraintBottom_toBottomOf="@id/cons_checkout"
                app:layout_constraintRight_toLeftOf="@id/tv_keranjang_totalharga"/>
            <TextView
                android:id="@+id/tv_keranjang_totalharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rp0"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                app:layout_constraintTop_toTopOf="@id/cons_checkout"
                app:layout_constraintBottom_toBottomOf="@id/cons_checkout"
                app:layout_constraintRight_toLeftOf="@id/btn_keranajng_bayar"/>
            <Button
                android:id="@+id/btn_keranajng_bayar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/bayar"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/cons_checkout"
                app:layout_constraintTop_toTopOf="@id/cons_checkout"
                app:layout_constraintRight_toRightOf="@id/cons_checkout"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_keranjang_semua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/semua"
                app:layout_constraintTop_toTopOf="@id/cons_checkout"
                app:layout_constraintBottom_toBottomOf="@id/cons_checkout"
                app:layout_constraintLeft_toLeftOf="@id/cons_checkout"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_keranjang_kosong"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/emptycartungu"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/actionbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_keranjang_kosong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wah, keranjangmu masih kosong"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_keranjang_kosong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_keranjang_kosong2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yuk, telusuri kursus keinginanmu!"
        android:textSize="12sp"
        android:textColor="@color/colorAbuGelap"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/tv_keranjang_kosong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/keranjang_progressbar"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/bouncy_balls"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>