<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/btn_akun"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/login"
            app:layout_constraintRight_toLeftOf="@id/btn_keranjang"
            app:layout_constraintLeft_toLeftOf="@id/main_constraint"
            app:layout_constraintTop_toTopOf="@id/main_constraint"
            app:layout_constraintBottom_toBottomOf="@id/main_constraint"/>
        <Button
            android:id="@+id/btn_keranjang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/keranjang"
            app:layout_constraintLeft_toRightOf="@id/btn_akun"
            app:layout_constraintRight_toLeftOf="@id/tabLayout"
            app:layout_constraintTop_toTopOf="@id/main_constraint"
            app:layout_constraintBottom_toBottomOf="@id/main_constraint"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:tabTextAppearance="@style/MyCustomTabText"
            app:tabTextColor="@color/black"
            app:tabIndicatorColor="@color/white"
            app:layout_constraintLeft_toRightOf="@id/btn_keranjang"
            app:layout_constraintRight_toRightOf="@id/btn_search"
            app:layout_constraintTop_toTopOf="@id/main_constraint"
            app:layout_constraintBottom_toBottomOf="@id/main_constraint"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/search"
            app:layout_constraintLeft_toRightOf="@id/tabLayout"
            app:layout_constraintRight_toLeftOf="@id/btn_chat"
            app:layout_constraintTop_toTopOf="@id/main_constraint"
            app:layout_constraintBottom_toBottomOf="@id/main_constraint"/>
        <Button
            android:id="@+id/btn_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/chat"
            app:layout_constraintLeft_toRightOf="@id/btn_search"
            app:layout_constraintRight_toRightOf="@id/main_constraint"
            app:layout_constraintTop_toTopOf="@id/main_constraint"
            app:layout_constraintBottom_toBottomOf="@id/main_constraint"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@id/main_constraint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ProgressBar
        android:id="@+id/main_progressBar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>