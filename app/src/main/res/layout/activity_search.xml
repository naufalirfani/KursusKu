<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchActivity">
    <LinearLayout
        android:id="@+id/search_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/btn_search_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAbuMuda"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            app:cardCornerRadius="4dp">
            <EditText
                android:id="@+id/search_et"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:textSize="12sp"
                android:hint="Cari kursus yang kamu inginkan"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:background="@color/colorAbuMuda"
                android:layout_gravity="center"
                android:padding="6dp"
                android:layout_height="match_parent">
            </EditText>
            <Button
                android:layout_gravity="center|right"
                android:id="@+id/search_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ic_search_black_24dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/search_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_linear"
        android:background="@color/white"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/search_linear">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_search_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/tv_search_semua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/semua"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_search_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/tv_search_bisnis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/bisnis"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_search_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/tv_search_desain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/desain"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_search_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/tv_search_finansial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/finasial"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_search_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/tv_search_fotografi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/fotografi"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_search_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/tv_search_kantor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/kantor"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_search_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/tv_search_pendidikan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/pendidikan"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_search_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/tv_search_pengembangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/pengembangan"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/tv_nothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="#FFFFFF"
        android:textStyle="normal"
        tools:text="@string/nothing_found"
        app:layout_constraintTop_toBottomOf="@+id/search_menu"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@+id/search_menu"/>
    <TextView
        android:id="@+id/tv_search_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/riwayat_pencarian"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:paddingLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_linear"/>
    <Button
        android:id="@+id/btn_search_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="right"
        android:background="@drawable/sampah"
        app:layout_constraintTop_toBottomOf="@id/search_linear"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_nothing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="#FFFFFF"
        android:textStyle="normal"
        tools:text="@string/nothing_found"
        app:layout_constraintTop_toBottomOf="@id/tv_search_history"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_rv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_search_history"/>
    <ImageView
        android:id="@+id/search_progressBar"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/bouncy_balls"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>