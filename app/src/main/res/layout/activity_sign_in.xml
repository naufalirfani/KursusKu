<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignInActivity">
    <include
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_masuk_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/akun"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/actionbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_masuk_username"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_masuk_icon">
        <EditText
            android:id="@+id/et_masuk_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorUnguTua"
            android:hint="Username atau Email"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_masuk_password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/til_masuk_username">
        <EditText
            android:id="@+id/et_masuk_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorUnguTua"
            android:hint="Kata Sandi"
            android:imeOptions="actionDone"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/iv_masuk_mata"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="@drawable/matanutup"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toTopOf="@id/til_masuk_password"
        app:layout_constraintBottom_toBottomOf="@id/til_masuk_password"
        app:layout_constraintRight_toRightOf="@id/til_masuk_password"/>
    <TextView
        android:id="@+id/tv_lupa_kata_sandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:text="Lupa kata sandi?"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@id/til_masuk_password"/>
    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="32dp"
        android:text="@string/masuk"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_daftar_masuk"
        app:layout_constraintTop_toBottomOf="@+id/tv_lupa_kata_sandi"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_masuk_dengan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_masuk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="10dp"
            android:text="atau masuk dengan"
            android:textColor="#919191"/>

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center|left"
            android:background="#919191" />

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="230dp"
            android:layout_gravity="center|left"
            android:background="#919191" />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/cv_button_masuk_dengan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cv_masuk_dengan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_login_fb"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            facebook:com_facebook_login_text="Facebook"/>
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button_google"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cv_button_masuk_dengan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Belum punya akun?"/>
        <TextView
            android:id="@+id/tv_daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daftar"
            android:layout_marginLeft="145dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>