<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvList"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/viewer">

            <ImageView
                android:id="@+id/img_item_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@android:color/darker_gray" />
            <TextView
                android:id="@+id/tv_item_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/black"
                tools:text="@string/nama_kursus" />
            <TextView
                android:id="@+id/tv_item_pembuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorAbuabu"
                android:maxLines="1"
                tools:text="Pembuat" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cvList2"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/tv_item_rating"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="#FFC107"
                    android:paddingRight="4dp"
                    tools:text="Rating"
                    android:paddingLeft="8dp"
                    app:layout_constraintTop_toTopOf="@id/cvList2"
                    app:layout_constraintLeft_toLeftOf="@id/cvList2"
                    app:layout_constraintBottom_toTopOf="@id/tv_item_harga"/>
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:clickable="false"
                    app:srb_fillColor="#FFC107"
                    app:srb_borderColor="#FFC107"
                    app:srb_pressedFillColor="#FFC107"
                    app:srb_pressedBorderColor="#FFC107"
                    app:srb_stepSize="0.1"
                    app:srb_gravity="left"
                    app:srb_starBorderWidth="3"
                    app:srb_isIndicator="true"
                    app:layout_constraintTop_toTopOf="@id/cvList2"
                    app:layout_constraintLeft_toRightOf="@id/tv_item_rating"
                    app:layout_constraintBottom_toTopOf="@id/tv_item_harga"/>
                <TextView
                    android:id="@+id/tv_jumlah_rating"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:maxLines="1"
                    android:textColor="@color/colorAbuabu"
                    android:gravity="center"
                    tools:text="Jumlah"
                    android:paddingRight="8dp"
                    app:layout_constraintTop_toTopOf="@id/cvList2"
                    app:layout_constraintLeft_toRightOf="@id/ratingbar"
                    app:layout_constraintBottom_toTopOf="@id/tv_item_harga"/>
                <TextView
                    android:id="@+id/tv_item_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:text="@string/harga"
                    android:paddingLeft="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_item_rating"
                    app:layout_constraintLeft_toLeftOf="@id/cvList2"
                    app:layout_constraintBottom_toTopOf="@id/tv_pemisah"/>
                <TextView
                    android:id="@+id/tv_hargaasli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorAbuabu"
                    android:textStyle=""
                    android:maxLines="1"
                    android:text="@string/harga_asli"
                    android:paddingRight="8dp"
                    app:layout_constraintTop_toBottomOf="@id/ratingbar"
                    app:layout_constraintLeft_toRightOf="@id/tv_item_harga"
                    app:layout_constraintBottom_toTopOf="@id/tv_pemisah"/>
                <TextView
                    android:id="@+id/tv_pemisah"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_item_harga"
                    app:layout_constraintBottom_toTopOf="@id/img_item_pembeli"
                    app:layout_constraintLeft_toLeftOf="@id/cvList2"/>
                <ImageView
                    android:id="@+id/img_item_pembeli"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:paddingTop="17dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/pembeli"
                    app:layout_constraintTop_toBottomOf="@id/tv_pemisah"
                    app:layout_constraintLeft_toLeftOf="@id/cvList2"
                    app:layout_constraintBottom_toTopOf="@id/tv_pemisah2"/>
                <TextView
                    android:id="@+id/tv_item_pembeli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:text="@string/pembeli"
                    app:layout_constraintTop_toBottomOf="@id/tv_pemisah"
                    app:layout_constraintLeft_toRightOf="@id/img_item_pembeli"
                    app:layout_constraintBottom_toTopOf="@id/tv_pemisah2"/>
                <ImageView
                    android:id="@+id/img_item_dilihat"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/dilihat"
                    app:layout_constraintTop_toBottomOf="@id/tv_pemisah"
                    app:layout_constraintRight_toLeftOf="@id/tv_item_dilihat"
                    app:layout_constraintBottom_toTopOf="@id/tv_pemisah2"/>
                <TextView
                    android:id="@+id/tv_item_dilihat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:text="@string/dilihat"
                    app:layout_constraintRight_toRightOf="@id/cvList2"
                    app:layout_constraintBottom_toTopOf="@id/tv_pemisah2"/>
                <TextView
                    android:id="@+id/tv_pemisah2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@id/img_item_dilihat"
                    app:layout_constraintBottom_toBottomOf="@id/cvList2"
                    app:layout_constraintLeft_toLeftOf="@id/cvList2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
            <TextView
                android:id="@+id/tv_item_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="#EB5757"
                android:alpha="0.7"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                android:layout_marginTop="12dp"
                android:text="@string/remaining"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>