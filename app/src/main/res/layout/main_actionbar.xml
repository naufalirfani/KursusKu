<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/white"
    android:elevation="8dp"
    app:layout_constraintTop_toTopOf="parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/btn_akun"
        android:layout_width="30dp"
        android:scaleType="centerCrop"
        android:layout_height="30dp"
        tools:src="@android:color/darker_gray"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/login"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_main_keranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/btn_keranjang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/keranjang"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:elevation="0dp"
            app:layout_constraintRight_toRightOf="@id/cons_main_keranjang"
            app:layout_constraintTop_toTopOf="@id/cons_main_keranjang"
            app:layout_constraintLeft_toLeftOf="@id/cons_main_keranjang"/>
        <TextView
            android:id="@+id/tv_main_jumlahkeranjang"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:text="1"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:maxLines="1"
            android:background="@drawable/bg_circle_red"
            app:layout_constraintTop_toTopOf="@id/cons_main_keranjang"
            app:layout_constraintRight_toRightOf="@id/cons_main_keranjang"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:tabTextAppearance="@style/MyCustomTabText"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/white" />
    <Button
        android:id="@+id/btn_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:background="@drawable/search"/>
    <Button
        android:id="@+id/btn_chat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:background="@drawable/chat" />
</LinearLayout>